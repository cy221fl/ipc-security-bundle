{% extends '::base.html.twig' %}
{% block body %}
    {{ form_start(password) }}
    {% if options.require_current %}
        {{ form_label(password.current) }}
        {{ form_widget(password.current) }}
        {{ form_errors(password.current) }}
    {% endif %}
    {% if options.require_repeated %}
        {{ form_label(password.new.new) }}
        {{ form_widget(password.new.new) }}
        {{ form_errors(password.new.new) }}

        {{ form_label(password.new.repeated) }}
        {{ form_widget(password.new.repeated) }}
        {{ form_errors(password.new.repeated) }}
    {% else %}
        {{ form_label(password.new) }}
        {{ form_widget(password.new) }}
        {{ form_errors(password.new) }}
    {% endif %}
    {{ form_widget(password.update) }}
    {{ form_end(password) }}
{% endblock %}